@import "../../style/config.styl"

.view-container
  width 100%
  height 100%
  overflow hidden
  .view-main
    width 100%
    height 100%

    .view-navigation
      display none
    .view-slides
      position relative
      width 100%
      height 100%
      & > div
        position: absolute;
        opacity 0
        width 100%
        height 100%
        transition-property opacity
        transition-duration 1s
        &.visible
          opacity 1
        &.none
          display none