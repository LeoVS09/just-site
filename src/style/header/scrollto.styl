@import "../config.styl"

@keyframes scrolltoWheel
  0%
    transform: translate(0,-1px);
    opacity: 0;
  50%
    transform: translate(0,2px);
    opacity: 1;
  100%
    transform: translate(0,5px);
    opacity: 0;


.scrollto
  position absolute
  display flex
  flex-direction column
  bottom 0
  left 0
  right 0
  margin auto
  z-index 7000
  cursor pointer
  width 20vmin // transform in vmin
  padding 1vmin
  .icon, .text
    opacity 1
    transform matrix(1, 0, 0, 1, 0, 0)
  .icon
    position relative
    width: 18px;
    margin: auto;
    height: 60px;
    transition: 0.5s fill;
    padding: 0;
    border: 0;
    vertical-align: baseline;
    font-style inherit
    .mouse, .wheel, .arrow
      position absolute
      width 18px
      height 60px
      margin: 0;
      padding: 0;
      border: 0;
      vertical-align: baseline;
      font-style: inherit
      path
       fill scrollto-color
    .wheel
      animation: 2s scrolltoWheel infinite cubic-bezier(.77,0,.575,1);
    .arrow
      transition: transform .5s cubic-bezier(.77,0,.175,1);
  .text
    text-align: center;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin auto
    color scrollto-color
  &:hover
    .mouse, .wheel, .arrow
      path
        fill lighten(scrollto-color, 20%)
    .arrow
      transform: translate(0,7px);
    .text
      color lighten(scrollto-color, 20%)



