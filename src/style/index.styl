@import "header.styl"
@import "parallax.styl"
@import "main.styl"


*
  font-family Roboto
html
  height 100%
  width 100%
  margin 0
  padding 0


body
  @extend html
  nav
    position fixed
    display flex
    justify-content center
    width 100%
    .nav-button
      width auto
      margin 1em 1em
      p
        display inline
        width auto
  #root
    height 100%
    header, main, footer
      margin auto
footer-color= #dddddd
footer
  height 5vh
  border-top 1px solid footer-color
  display flex
  color darken(footer-color, 20%)
  p
    font-size 0.9em
    margin auto

.dynamic-parallax
  background-image url('../images/header.jpg')

