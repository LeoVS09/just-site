    body
        nav
            - var paragraphs =  ['about','works','contact']
            - var navButtons = ['Developer', ...paragraphs]
            for word in navButtons
                div.nav-button
                    p=word
        div#root
            header
                div(class="fullscreen background parallax"  data-img-width="1600" data-img-height="1064" data-diff="100")
                    div(class="content-a")
                        div(class="content-b") Centered content
            main.block-list
                - var tags = paragraphs;
                - var names = paragraphs.map(str => str.toUpperCase() );
                - var cards = [["Разработка под андройд на нативе","Серверы на связке Java Spring + Hibernate + MySQL","Скрипты и серверы на python (пример парсера на SRL + Pewee + MySQL)","SPA на ReactJS и Redux ( и open source library )","Разработка десктопных приложений на C++","Небольшой опыт разработки на ts и angular","Занимался олимпиадным программированием","Интересуюсь UX дизайном","Быстро обучаюсь"],["Out believe has request not how comfort evident.","Up delight cousins we feeling minutes.","Genius has looked end piqued spring.","Down has rose feel find man.","Learning day desirous informed expenses material returned six the.","She enabled invited exposed him another.","Reasonably conviction solicitude me mr at discretion reasonable.","Age out full gate bed day lose."],["89111185177","https:/github.com/LeoVS09","LeoVS010@gmail.com"]];
                - var images = [0,1,1];
                - var blocks = [];
                - for(var i = 0; i < tags.length; i++){
                -   blocks.push({ tag: tags[i], name: names[i], cards: cards[i], image: images[i] });
                - }
                mixin block(data)
                    div(class=(data.tag + " paragraph"))
                        h1= data.name
                        if data.image
                            div(class=(data.tag + "-image"))
                        div.cards
                            for card in data.cards
                                div.card
                                    p=card
                for data in blocks
                    +block(data)
            footer.footer
                h4 foot
